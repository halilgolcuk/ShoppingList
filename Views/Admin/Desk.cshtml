@model AdminViewModel
<div class="container">
    <div class="d-flex align-items-center h-100 mt-4">
        <div class="container h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="card" style="border-radius: 15px;">
                    <div class="card-body p-5">
                        <h2 class="text-center mb-5">Admin Paneli</h2>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="card">
                                    <div class="card-body text-center">
                                        <h5 class="card-title">Ürünler</h5>
                                        <p class="card-text">
                                            <ul class="list-group list-group-flush">
                                                <li class="list-group-item">
                                                    @Model.ProductCount Adet Ürün Bulunmaktadır.
                                                </li>
                                            </ul>
                                        </p>
                                        <div class="text-center">
                                            <a href="/admin/products" class="btn btn-warning d-block mb-1">Ürünleri Düzenle</a>
                                            <a href="/admin/addproduct" class="btn btn-primary d-block">Yeni Ürün Ekle</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="card">
                                    <div class="card-body text-center">
                                        <h5 class="card-title">Kategoriler</h5>
                                        <p class="card-text">
                                            <ul class="list-group list-group-flush">
                                                <li class="list-group-item">
                                                    @Model.CategoryCount Adet Kategori Bulunmaktadır.
                                                </li>
                                            </ul>
                                        </p>
                                        <div class="text-center">
                                            <a href="/admin/categories" class="btn btn-warning d-block mb-1">Kategorileri Düzenle</a>
                                            <a href="/admin/addcategories" class="btn btn-primary d-block">Yeni Kategori Ekle</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
