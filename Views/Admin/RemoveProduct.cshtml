@using ShoppingList.Entities;
@model Product

<div class="container">
    <div class="row">
        <div class="text-center mt-5">
            <div class="alert alert-danger">
                <p>Ürünü silmek istediğinizden emin misiniz ? <br>'@Model.Name' ürünü siliniyor</p>
                <form method="post" asp-controller="admin" asp-action="removeproductpost">
                    <input type="hidden" value="@Model.Id" name="product_id" />
                    <button type="submit" class="btn btn-danger">Evet</button>
                    <a href="/admin/products" class="btn btn-primary">Hayır</a>
                </form>
            </div>
        </div>
    </div>
</div>